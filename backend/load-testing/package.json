{
  "name": "callcentre-crm-load-testing",
  "version": "1.0.0",
  "description": "Нагрузочное тестирование CRM системы колл-центра",
  "main": "load-test.js",
  "scripts": {
    "load-test": "node load-test.js",
    "db-test": "node db-performance-test.js",
